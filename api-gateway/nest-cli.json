{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "api-gateway/src/main.js",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "views",
        "outDir": "dist/api-gateway/src",
        "watchAssets": true
      },
      {
        "include": "uploads",
        "outDir": "dist/api-gateway/src",
        "watchAssets": true
      }
    ]
  }
}
